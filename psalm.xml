<?xml version="1.0"?>
<psalm
    errorLevel="3"
    reportMixedIssues="true"
    resolveFromConfigFile="true"
    checkForThrowsDocblock="true"
    checkForThrowsInGlobalScope="true"
    addParamDefaultToDocblockType="false"
    allowStringToStandInForClass="true"
    phpVersion="5.6"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>

    <projectFiles>
        <directory name="inc"/>
        <directory name="tests"/>
        <file name="tabs-with-recommended-posts.php"/>
        <ignoreFiles>
            <directory name=".git"/>
            <directory name=".svn"/>
            <directory name=".stubs"/>
            <directory name=".svg-icons-src"/>
            <directory name=".vscode"/>
            <directory name="node_modules"/>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>

    <stubs>
        <file name=".stubs/wordpress-stubs.php"/>
        <file name=".stubs/wp-phpunit.php"/>
        <file name=".stubs/wp-phpunit-fix.php"/>
        <file name=".stubs/phpunit-7.php"/>
    </stubs>

    <issueHandlers>
        <RedundantConditionGivenDocblockType errorLevel="suppress"/>
        <MoreSpecificImplementedParamType errorLevel="suppress"/>

        <!-- Suppress in tests -->
        <UndefinedClass>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </UndefinedClass>

        <UndefinedTrait>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </UndefinedTrait>

        <MissingReturnType>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </MissingReturnType>

        <MissingThrowsDocblock>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </MissingThrowsDocblock>
    </issueHandlers>
<plugins><pluginClass class="Psalm\PhpUnitPlugin\Plugin"/></plugins></psalm>
